#titlebar
    background          frameColor

.titlebar-name
    color               textActiveColor

.titlebar-version
    color               scrollColor

.titlebar-dot
    color               titleColor

#titlebar .winbutton
    &:active
        background-color titleRedColor
        &.gray
            background-color titleColor

#titlebar .winbutton.gray
    color              textBlurColor   
#titlebar .winbutton svg
    stroke-width        1px
    stroke              textBlurColor   
    
#titlebar .winbutton.gray:active
    color               textFocusColor
#titlebar .winbutton:active svg    
    stroke              textFocusColor
    
#titlebar .winbutton.gray:hover    
    color              textFocusColor
#titlebar .winbutton:hover svg    
    stroke              textFocusColor
        
