bgColor             = #181818
frameColor          = #111111
scrollHoverColor    = #b00
titleRedColor       = #f00
titleColor          = #333
scrollColor         = #444
textBlurColor       = #666
textActiveColor     = #999
textFocusColor      = #fff

frameWidth          = 6px
frameBorder         = frameWidth solid frameColor

