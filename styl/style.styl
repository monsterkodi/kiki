#titlebar
    display             flex
    flex-direction      row
    height              titlebarHeight
    box-sizing          border-box
    font-size           titlebarFontSize
    font-family         titlebarFont
    white-space         nowrap
    cursor              pointer

.titlebar-title
    flex                1 1
    display             inline-block
    flex-direction      row
    padding-top         7px
    padding-left        10px
    padding-right       10px
    font                titlebarFont
    
.titlebar-dot
    display             inline-block
    vertical-align      top
    padding-left        9px
    padding-right       9px
    margin-top          -1px

#titlebar .winicon img
    pointer-events      all
    padding-left        6px
    padding-top         3px
    width               22px
    height              22px
    
#titlebar .winbutton
    flex                0 0 45px
    display             inline-block
    text-align          center
    vertical-align      bottom
    font-size           18px
    padding-top         2px
    pointer-events      all
    &.minimize
        padding-top     5px

#titlebar .topframe
    height              2px
    position            absolute
    left                0
    top                 0
    right               135px
        
