*
    outline-width       0
    
body
    fill-abs()
    margin              0
    overflow            hidden
    -webkit-user-select none
    
#main
    position            absolute
    bottom              0
    right               0
    left                0
    top                 titlebarHeight
    scroll              none
    overflow            hidden
    pointer-events      auto
            
